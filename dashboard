apiVersion: v1
kind: ServiceAccount
metadata:
  name: k8s-dashboard
  namespace: kube-system
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: k8s-dashboard-binding
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
- kind: ServiceAccount
  name: k8s-dashboard
  namespace: kube-system
---
apiVersion: v1
kind: Secret
metadata:
  name: k8s-dashboard-token
  namespace: kube-system
type: kubernetes.io/service-account-token
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: k8s-dashboard
  namespace: kube-system
spec:
  replicas: 1
  selector:
    matchLabels:
      app: k8s-dashboard
  template:
    metadata:
      labels:
        app: k8s-dashboard
    spec:
      containers:
      - name: k8s-dashboard
        image: kubernetesui/dashboard:v2.2.0
        ports:
        - containerPort: 8443
          protocol: TCP
        args:
        - --auto-generate-certificates
        - --namespace=kube-system
        - --enable-insecure-login
        - --token-ttl=43200 # Set token expiration time to 12 hours (in seconds)
        env:
        - name: DASHBOARD_USERNAME
          value: admin
        - name: DASHBOARD_PASSWORD
          value: admin
        livenessProbe:
          httpGet:
            scheme: HTTPS
            path: /
            port: 8443
          initialDelaySeconds: 30
          timeoutSeconds: 30
---
apiVersion: v1
kind: Service
metadata:
  name: k8s-dashboard
  namespace: kube-system
spec:
  type: NodePort
  selector:
    app: k8s-dashboard
  ports:
  - name: https
    port: 443
    targetPort: 8443
    nodePort: 30000
kubectl -n kube-system describe secret k8s-dashboard-token | grep '^token'
