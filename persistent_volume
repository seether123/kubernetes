apiVersion: v1
kind: PersistentVolume
metadata:
  name: nfs-share
spec:
  storageClassName: manual
  capacity:
    storage: 500Gi
  persistentVolumeReclaimPolicy: Retain
  accessModes:
    - ReadWriteMany
  nfs:
    server: synology.local
    path: "/volume1/example"
---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: example
spec:
  storageClassName: manual
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 500Gi
 ---
         volumeMounts:
          - mountPath: "/mnt/blog-example"
            name: blog-example
      volumes:
        - name: blog-example
          persistentVolumeClaim:
            claimName: example
